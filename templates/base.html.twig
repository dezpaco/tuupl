    </footer> <!-- End .footer -->
    {% endblock footer %}
    
    {#
     # Site scripts are for sitewide assets, use scripts-page if only
     # loading in individual page or module.
     #}
    {% block scripts_site %}
        <!--[if gte IE 9]><!-->
            <script class="mediaquerydependent" data-src="/assets/js/fastclick.min.js" data-media="screen and (max-width: 61.25em)"></script>
            <script>
                {# This script searches for <script> or <link> with .mediaquerydependent so it can conditionally load assets using matchMedia. Remember to check http://caniuse.com/matchmedia in case the assets are important for legacy browsers/devices. #}
                (function(){
                  var queries = document.
                                querySelectorAll('.mediaquerydependent'),
                      all = queries.length,
                      cur = null,
                      attr = null;
                  while (all--) {
                    cur = queries[all];
                    if (cur.dataset.media &&
                        window.matchMedia(cur.dataset.media).matches) {
                      for (attr in cur.dataset) {
                        if (attr !== 'media') {
                          cur.setAttribute(attr, cur.dataset[attr]);
                        }
                      }
                    }
                  }
                }());
                
                {# This will use fastclick.min.js to turn off the 300ms click delay on mobile browsers and therefore greatly speed up using the website (the device waits for a double click event but not necessary). 61.25em is roughly 980px ($break-medium). #}
                if(window.matchMedia('screen and (max-width: 61.25em)').matches) {
                    window.addEventListener('load', function() {
                        FastClick.attach(document.body);
                    }, false);          
                }
            </script>
        <!--<![endif]-->
    {% endblock scripts_site %}

    {#
     # These scripts are for when you need something for a specific page
