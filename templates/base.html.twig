<!doctype html>
<html lang="en">

<head>
{% block head %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Tuupl: Color space converter</title>
    {#
     # Put a 32x32 favicon.ico file in root for IE,
     # everything else uses the PNGs declared here.
     #}
    <link rel="icon" href="/assets/images/favicon.png" />

    <meta name="description" content="Color space converter for Hex and RGB." />
    <meta property="og:site_name" content="Tuupl">
    <meta property="og:description" content="Color space converter for Hex and RGB." />
    <meta property="og:title" content="Tuupl" />
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ url }}" />
    <meta property="og:image" content="{{ url }}/assets/images/og-img.png" />
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@dezpaco">
    <meta name="twitter:title" content="Tuupl">
    <meta name="twitter:description" content="Color space converter for Hex and RGB.">
    <meta name="twitter:image" content="{{ url }}/assets/images/og-img.png">

    <link href="http://fonts.googleapis.com/css?family=Montserrat:700|Open+Sans:400,600" rel="stylesheet">
    <link href="/assets/css/core.css" media="screen" rel="stylesheet"/>
    <link href="/assets/css/print.css" media="print" rel="stylesheet"/>
    {#
     # These assets are for when you need something for a specific page
     # but don't want every other page to load it.
     #}
    {% block assets_head_page %}{% endblock %}

    <!-- iPad retina icon -->
    <link href="/assets/images/apple-touch-icon-152.png" sizes="152x152" rel="apple-touch-icon">
    <!-- iPad retina icon (iOS < 7) -->
    <link href="/assets/images/apple-touch-icon-144.png" sizes="144x144" rel="apple-touch-icon">
    <!-- iPad non-retina icon -->
    <link href="/assets/images/apple-touch-icon-76.png" sizes="76x76" rel="apple-touch-icon">
    <!-- iPad non-retina icon (iOS < 7) -->
    <link href="/assets/images/apple-touch-icon-72.png" sizes="72x72" rel="apple-touch-icon">
    <!-- iPhone 6 Plus icon -->
    <link href="/assets/images/apple-touch-icon-180.png" sizes="120x120" rel="apple-touch-icon">
    <!-- iPhone retina icon (iOS < 7) -->
    <link href="/assets/images/apple-touch-icon-114.png" sizes="114x114" rel="apple-touch-icon">
    <!-- iPhone non-retina icon (iOS < 7) -->
    <link href="/assets/images/apple-touch-icon-57.png" sizes="57x57" rel="apple-touch-icon">
{% endblock head %}
</head>

<body{% if bodyId %} id="{{ bodyId }}"{% endif %}{% if bodyClass %} class="{{ bodyClass }}"{% endif %}>

    <div class="wrapper">

        {% block header %}
        <header class="header">

            {% block logo %}
            <a href="/" class="logo-base">T u u p l</a>
            {% endblock %}
            <p class="strapline">Color space converter</p>

        </header> <!-- End .header -->
        {% endblock header %}

        <div class="content">
            <main class="content-align">
            {% block content %}

                {% block primary %}
                <div class="primary">

                    Shall we play a game?

                </div> <!-- End .primary -->
                {% endblock primary %}

            {% endblock content %}
            </main> <!-- End .content-align -->
        </div> <!-- End .content -->

    </div> <!-- End .wrapper -->

    {% block footer %}
    <footer class="footer">

        <p class="fnav-credits">Made by <a href="http://derrry.com" rel="external">Derry Lozano-Hoyland</a></p>

    </footer> <!-- End .footer -->
    {% endblock footer %}

    {#
     # Site scripts are for sitewide assets, use scripts-page if only
     # loading in individual page or module.
     #}
    {% block scripts_site %}{% endblock %}

    {#
     # These scripts are for when you need something for a specific page
     # but don't want every other page to load it.
     #}
    {% block scripts_page %}{% endblock %}
</body>
</html>
